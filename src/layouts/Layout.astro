---
import { getCollection } from 'astro:content';

interface Props {
  title: string;
  description?: string;
  dir?: 'ltr' | 'rtl';
}

const { title, description = 'Watch movies, shows and anime', dir = 'rtl' } = Astro.props;

const movies = (await getCollection('movies')).filter(m => !m.data.draft);
const shows = (await getCollection('shows')).filter(s => !s.data.draft);
const anime = (await getCollection('anime')).filter(a => !a.data.draft);
const episodes = (await getCollection('episodes')).filter(e => !e.data.draft);
const animeEpisodes = (await getCollection('animeEpisodes')).filter(e => !e.data.draft);

const searchData = [
  ...movies.map(m => ({
    type: 'movie',
    id: m.data.id,
    title: m.data.title,
    year: m.data.year,
    thumbnail: m.data.thumbnail,
    description: m.data.description,
    tags: m.data.tags
  })),
  ...shows.map(s => ({
    type: 'show',
    tv: s.data.tv,
    title: s.data.title,
    year: s.data.year,
    thumbnail: s.data.thumbnail,
    description: s.data.description,
    tags: s.data.tags
  })),
  ...anime.map(a => ({
    type: 'anime',
    tv: a.data.tv,
    title: a.data.title,
    year: a.data.year,
    thumbnail: a.data.thumbnail,
    description: a.data.description,
    tags: a.data.tags
  })),
  ...episodes.map(e => {
    const show = shows.find(s => s.data.tv === e.data.tv);
    return {
      type: 'episode',
      tv: e.data.tv,
      se: e.data.se,
      ep: e.data.ep,
      title: `${show?.data.title || 'مسلسل'} - ${e.data.title}`,
      thumbnail: show?.data.thumbnail,
      description: show?.data.description,
      tags: show?.data.tags
    };
  }),
  ...animeEpisodes.map(e => {
    const animeShow = anime.find(a => a.data.tv === e.data.tv);
    return {
      type: 'animeEpisode',
      tv: e.data.tv,
      se: e.data.se,
      ep: e.data.ep,
      title: `${animeShow?.data.title || 'أنمي'} - ${e.data.title}`,
      thumbnail: animeShow?.data.thumbnail,
      description: animeShow?.data.description,
      tags: animeShow?.data.tags
    };
  })
];
---

<!doctype html>
<html lang="ar" dir={dir}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://cdn.plyr.io">
    <link rel="preconnect" href="https://cdn.jsdelivr.net">
    <link rel="dns-prefetch" href="https://images.pexels.com">

    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
    <noscript><link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet"></noscript>

    <slot name="head" />

    <style>
      body{margin:0;background:#030712;color:#f3f4f6}
      header{background:#111827;position:sticky;top:0;z-index:50;border-bottom:1px solid #1f2937}
      .container-custom{max-width:1280px;margin:0 auto;padding:0 1rem}
      .bg-gray-950{background:#030712}
      .bg-gray-900{background:#111827}
      .bg-gray-800{background:#1f2937}
      .text-gray-100{color:#f3f4f6}
      .text-primary-500{color:#3b82f6}
    </style>

    <script src="https://cdn.jsdelivr.net/npm/fuse.js@7.0.0" defer></script>
  </head>
  <body class="bg-gray-950 text-gray-100">
    <header class="bg-gray-900 shadow-sm sticky top-0 z-50 border-b border-gray-800">
      <nav class="container-custom py-4" aria-label="التنقل الرئيسي">
        <div class="flex items-center justify-between gap-4">
          <a href="/" class="text-2xl font-bold text-primary-500" aria-label="الصفحة الرئيسية">
            Stream
          </a>

          <div class="flex items-center gap-4 flex-1 justify-end">
            <div class="hidden md:block flex-1 max-w-md relative">
              <form action="/search" method="get" role="search" class="relative">
                <input
                  type="search"
                  name="q"
                  id="header-search"
                  placeholder="بحث..."
                  autocomplete="off"
                  class="w-full px-4 py-2 pr-10 rounded-lg bg-gray-800 text-gray-100 placeholder-gray-500 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-sm"
                  aria-label="بحث عن أفلام ومسلسلات وأنمي"
                />
                <span class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 i-carbon-search"></span>
              </form>
              <div id="search-dropdown" class="hidden absolute top-full mt-2 w-full bg-gray-800 rounded-lg shadow-xl border border-gray-700 max-h-96 overflow-y-auto z-50"></div>
            </div>

            <div class="flex items-center gap-4">
              <a href="/movies" class="hover:text-primary-500 transition-colors text-gray-300 text-sm md:text-base" aria-label="صفحة الأفلام">أفلام</a>
              <a href="/shows" class="hover:text-primary-500 transition-colors text-gray-300 text-sm md:text-base" aria-label="صفحة المسلسلات">مسلسلات</a>
              <a href="/anime" class="hover:text-primary-500 transition-colors text-gray-300 text-sm md:text-base" aria-label="صفحة الأنمي">أنمي</a>
              <a href="/search" class="hover:text-primary-500 transition-colors text-gray-300 md:hidden" aria-label="صفحة البحث">
                <span class="i-carbon-search text-xl"></span>
              </a>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <main class="min-h-screen">
      <slot />
    </main>

    <footer class="bg-gray-900 mt-20 py-12 border-t border-gray-800">
      <div class="container-custom">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">Stream</h3>
            <p class="text-gray-400">
              منصة مشاهدة الأفلام والمسلسلات والأنمي
            </p>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">روابط سريعة</h3>
            <ul class="space-y-2">
              <li><a href="/movies" class="text-gray-400 hover:text-primary-500" aria-label="انتقل إلى صفحة الأفلام">أفلام</a></li>
              <li><a href="/shows" class="text-gray-400 hover:text-primary-500" aria-label="انتقل إلى صفحة المسلسلات">مسلسلات</a></li>
              <li><a href="/anime" class="text-gray-400 hover:text-primary-500" aria-label="انتقل إلى صفحة الأنمي">أنمي</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">تواصل معنا</h3>
            <p class="text-gray-400">
              info@example.com
            </p>
          </div>
        </div>
        <div class="mt-8 pt-8 border-t border-gray-700 text-center text-gray-400">
          <p>&copy; 2025 Stream. جميع الحقوق محفوظة.</p>
        </div>
      </div>
    </footer>

    <style is:global>
      * {
        font-family: 'Cairo', sans-serif;
      }

      html[dir="rtl"] {
        text-align: right;
      }

      body {
        overflow-x: hidden;
      }

      html {
        color-scheme: dark;
      }
    </style>


    <script src="https://cdn.plyr.io/3.7.8/plyr.js"></script>

    <script define:vars={{ searchData }}>
      window.__HEADER_SEARCH_DATA__ = searchData;
    </script>

    <script>
      let fuse = null;
      let searchTimeout = null;

      function initHeaderSearch() {
        const searchData = (window as any).__HEADER_SEARCH_DATA__;
        if (!searchData) return;

        fuse = new (window as any).Fuse(searchData, {
          keys: ['title', 'description', 'tags'],
          threshold: 0.3,
          includeScore: true,
        });
      }

      function renderDropdown(results) {
        const dropdown = document.getElementById('search-dropdown');
        if (!dropdown) return;

        if (results.length === 0) {
          dropdown.innerHTML = '<p class="p-4 text-gray-400 text-center text-sm">لا توجد نتائج</p>';
          dropdown.classList.remove('hidden');
          return;
        }

        const movieResults = results.filter(r => r.item.type === 'movie').slice(0, 3);
        const showResults = results.filter(r => r.item.type === 'show').slice(0, 3);
        const animeResults = results.filter(r => r.item.type === 'anime').slice(0, 3);

        let html = '<div class="p-2">';

        if (movieResults.length > 0) {
          html += '<div class="mb-2"><p class="text-xs font-semibold text-gray-400 px-2 py-1">أفلام</p>';
          movieResults.forEach(result => {
            const item = result.item;
            const url = `/movies/${item.id}`;
            html += `
              <a href="${url}" class="flex items-center gap-2 p-2 hover:bg-gray-700 rounded-lg transition-colors">
                <img src="${item.thumbnail}" alt="${item.title}" class="w-10 h-14 object-cover rounded" />
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-semibold text-white truncate">${item.title}</p>
                  <p class="text-xs text-gray-400">${item.year}</p>
                </div>
              </a>
            `;
          });
          html += '</div>';
        }

        const episodeResults = results.filter(r => r.item.type === 'episode').slice(0, 3);
        if (showResults.length > 0 || episodeResults.length > 0) {
          html += '<div class="mb-2"><p class="text-xs font-semibold text-gray-400 px-2 py-1">مسلسلات</p>';
          showResults.forEach(result => {
            const item = result.item;
            const url = `/shows/${item.tv}`;
            html += `
              <a href="${url}" class="flex items-center gap-2 p-2 hover:bg-gray-700 rounded-lg transition-colors">
                <img src="${item.thumbnail}" alt="${item.title}" class="w-10 h-14 object-cover rounded" />
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-semibold text-white truncate">${item.title}</p>
                  <p class="text-xs text-gray-400">${item.year}</p>
                </div>
              </a>
            `;
          });
          episodeResults.forEach(result => {
            const item = result.item;
            const url = `/shows/${item.tv}/${item.se}/${item.ep}`;
            html += `
              <a href="${url}" class="flex items-center gap-2 p-2 hover:bg-gray-700 rounded-lg transition-colors">
                <img src="${item.thumbnail}" alt="${item.title}" class="w-10 h-14 object-cover rounded" />
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-semibold text-white truncate">${item.title}</p>
                  <p class="text-xs text-gray-400">الموسم ${item.se} - الحلقة ${item.ep}</p>
                </div>
              </a>
            `;
          });
          html += '</div>';
        }

        const animeEpisodeResults = results.filter(r => r.item.type === 'animeEpisode').slice(0, 3);
        if (animeResults.length > 0 || animeEpisodeResults.length > 0) {
          html += '<div class="mb-2"><p class="text-xs font-semibold text-gray-400 px-2 py-1">أنمي</p>';
          animeResults.forEach(result => {
            const item = result.item;
            const url = `/anime/${item.tv}`;
            html += `
              <a href="${url}" class="flex items-center gap-2 p-2 hover:bg-gray-700 rounded-lg transition-colors">
                <img src="${item.thumbnail}" alt="${item.title}" class="w-10 h-14 object-cover rounded" />
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-semibold text-white truncate">${item.title}</p>
                  <p class="text-xs text-gray-400">${item.year}</p>
                </div>
              </a>
            `;
          });
          animeEpisodeResults.forEach(result => {
            const item = result.item;
            const url = `/anime/${item.tv}/${item.se}/${item.ep}`;
            html += `
              <a href="${url}" class="flex items-center gap-2 p-2 hover:bg-gray-700 rounded-lg transition-colors">
                <img src="${item.thumbnail}" alt="${item.title}" class="w-10 h-14 object-cover rounded" />
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-semibold text-white truncate">${item.title}</p>
                  <p class="text-xs text-gray-400">الموسم ${item.se} - الحلقة ${item.ep}</p>
                </div>
              </a>
            `;
          });
          html += '</div>';
        }

        if (results.length > 9) {
          const query = (document.getElementById('header-search') as HTMLInputElement).value;
          html += `<a href="/search?q=${encodeURIComponent(query)}" class="block p-2 text-center text-sm text-primary-500 hover:bg-gray-700 rounded-lg transition-colors">عرض جميع النتائج</a>`;
        }

        html += '</div>';
        dropdown.innerHTML = html;
        dropdown.classList.remove('hidden');
      }

      document.addEventListener('DOMContentLoaded', () => {
        if (typeof (window as any).Fuse !== 'undefined') {
          initHeaderSearch();
        } else {
          const checkFuse = setInterval(() => {
            if (typeof (window as any).Fuse !== 'undefined') {
              initHeaderSearch();
              clearInterval(checkFuse);
            }
          }, 100);
        }

        const headerSearch = document.getElementById('header-search') as HTMLInputElement;
        const dropdown = document.getElementById('search-dropdown');

        if (headerSearch && dropdown) {
          headerSearch.addEventListener('input', (e) => {
            const query = (e.target as HTMLInputElement).value.trim();

            clearTimeout(searchTimeout);

            if (!query) {
              dropdown.classList.add('hidden');
              return;
            }

            searchTimeout = setTimeout(() => {
              if (fuse) {
                const results = fuse.search(query);
                renderDropdown(results);
              }
            }, 200);
          });

          headerSearch.addEventListener('focus', (e) => {
            const query = (e.target as HTMLInputElement).value.trim();
            if (query && fuse) {
              const results = fuse.search(query);
              renderDropdown(results);
            }
          });

          document.addEventListener('click', (e) => {
            if (!headerSearch.contains(e.target as Node) && !dropdown.contains(e.target as Node)) {
              dropdown.classList.add('hidden');
            }
          });

          const form = headerSearch.closest('form');
          if (form) {
            form.addEventListener('submit', (e) => {
              const query = headerSearch.value.trim();
              if (!query) {
                e.preventDefault();
              }
            });
          }
        }
      });
    </script>
  </body>
</html>
