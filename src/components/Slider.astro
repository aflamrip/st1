---
interface Props {
  title: string;
  viewAllLink?: string;
}

const { title, viewAllLink } = Astro.props;
---

<section class="py-8">
  <div class="container-custom">
    <div class="flex items-center justify-between mb-6">
      <h2 class="section-title">{title}</h2>
      {viewAllLink && (
        <a href={viewAllLink} class="text-primary-500 hover:text-primary-600 font-medium text-sm flex items-center gap-2 transition-colors">
          عرض الكل
          <span class="i-carbon-arrow-left"></span>
        </a>
      )}
    </div>
    <div class="slider-container">
      <div class="slider-wrapper">
        <slot />
      </div>
    </div>
  </div>
</section>

<style>
  .slider-container {
    overflow-x: auto;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .slider-container::-webkit-scrollbar {
    display: none;
  }

  .slider-wrapper {
    display: flex;
    gap: 1rem;
    padding-bottom: 1rem;
  }

  @media (min-width: 768px) {
    .slider-wrapper {
      gap: 1.25rem;
    }
  }
</style>
