---
interface Props {
  label: string;
  title: string;
  thumbnail: string;
  href: string;
  year?: number;
  info?: string;
}

const { label, title, thumbnail, href, year, info } = Astro.props;
---

<a href={href} class="latest-card group">
  <div class="relative overflow-hidden rounded-lg h-[280px] md:h-[380px]">
    <img
      src={thumbnail}
      alt={title}
      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
      loading="lazy"
      width="350"
      height="380"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black via-black/40 to-transparent"></div>

    <div class="absolute top-4 right-4">
      <span class="px-3 py-1 bg-primary-500 text-white text-xs font-semibold rounded-full shadow-lg">
        {label}
      </span>
    </div>

    <div class="absolute bottom-0 left-0 right-0 p-6">
      <h3 class="text-white font-bold text-xl md:text-2xl mb-2 line-clamp-2">{title}</h3>
      <div class="flex items-center gap-3 text-gray-300 text-sm">
        {year && <span>{year}</span>}
        {info && <span>• {info}</span>}
      </div>
      <div class="mt-4 flex items-center gap-2 text-white opacity-0 group-hover:opacity-100 transition-opacity">
        <span class="i-carbon-play-filled text-2xl"></span>
        <span class="font-medium">شاهد الآن</span>
      </div>
    </div>
  </div>
</a>

<style>
  .latest-card {
    display: block;
    transition: transform 0.3s ease;
  }

  .latest-card:hover {
    transform: translateY(-4px);
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
