---
interface Props {
  label: string;
  title: string;
  thumbnail: string;
  href: string;
  year?: number;
  info?: string;
}

const { label, title, thumbnail, href, year, info } = Astro.props;
---

<a href={href} class="latest-card group">
  <div class="relative overflow-hidden rounded-xl bg-gray-800">
    <img
      src={thumbnail}
      alt={title}
      class="w-full h-[200px] object-cover group-hover:scale-105 transition-transform duration-300"
      loading="lazy"
      width="250"
      height="200"
    />
    <div class="absolute top-2 right-2">
      <span class="px-2 py-1 bg-primary-500 text-white text-xs font-semibold rounded-md">
        {label}
      </span>
    </div>
    <div class="p-4">
      <h3 class="text-white font-semibold text-sm mb-1 line-clamp-2">{title}</h3>
      <div class="flex items-center gap-2 text-gray-400 text-xs">
        {year && <span>{year}</span>}
        {info && <span>â€¢ {info}</span>}
      </div>
    </div>
  </div>
</a>

<style>
  .latest-card {
    display: block;
    transition: all 0.3s ease;
    width: 200px;
  }

  .latest-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 30px rgba(59, 130, 246, 0.3);
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (max-width: 640px) {
    .latest-card {
      width: 160px;
    }
  }

  @media (min-width: 768px) {
    .latest-card {
      width: 220px;
    }
  }
</style>
