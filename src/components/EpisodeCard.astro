---
interface Props {
  tv: number;
  se: number;
  ep: number;
  title: string;
  duration: string;
  type?: 'show' | 'anime';
}

const { tv, se, ep, title, duration, type = 'show' } = Astro.props;
const basePath = type === 'anime' ? '/anime' : '/shows';
---

<a href={`${basePath}/${tv}/${se}/${ep}`} class="card group">
  <div class="relative overflow-hidden">
    <div class="card-thumb bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center">
      <div class="text-center text-white">
        <div class="text-4xl font-bold">{ep}</div>
        <div class="text-sm mt-1">{duration}</div>
      </div>
    </div>
    <div class="absolute inset-0 bg-black/30 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
      <span class="i-carbon-play-filled text-4xl text-white"></span>
    </div>
  </div>
  <div class="p-3 bg-white dark:bg-gray-900">
    <h3 class="font-semibold text-sm line-clamp-2 text-gray-900 dark:text-gray-100">{title}</h3>
  </div>
</a>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
